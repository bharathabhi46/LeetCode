var capitalizeTitle = function(title) {
     let s=title.toLowerCase().split(' ')
    let str=''
    for(let i=0;i<s.length;i++){
        if(s[i].length>=3){
        str+=s[i][0].toUpperCase()+s[i].slice(1) + ' '
        }else{
            str+=s[i]+' '
        }
    }
    return str.slice(0,-1)
};
